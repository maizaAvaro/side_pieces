
import java.util.Scanner;
import java.awt.image.BufferedImage;
import java.io.File;
import java.io.IOException;
import javax.imageio.ImageIO;

public class GreenScreen {

	public void getImage(){
		
		BufferedImage img1 = null;
		
		try{
			
			String inp1 = "sagar.png";
			img1 = ImageIO.read(new File(inp1));
			
		}	catch (IOException e){
			
			System.out.println("Reading Image Error");
			e.printStackTrace();
			
		}
		
	}

	public static void main(String[] args) {

		BufferedImage imgOne = null;
		try{
			
			String inpOne = "C:\\Users\\Nathan\\Desktop\\Project 1 Files\\sagar.png";
			imgOne = ImageIO.read(new File(inpOne));
			
			ImageIO.write(imgOne, "png", new File("out.png"));
			System.out.println("File Created!");
			
		}	catch (IOException e){
			
				System.out.println("Reading Image Error");
				e.printStackTrace();
		}
		
		
		
	}

}
