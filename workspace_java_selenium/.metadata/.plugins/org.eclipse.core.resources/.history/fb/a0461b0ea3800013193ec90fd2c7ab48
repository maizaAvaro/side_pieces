package tests;

import com.thoughtworks.selenium.*;
import org.junit.After;
import org.junit.Before;
import org.junit.Test;
import static org.junit.Assert.*;
import java.util.regex.Pattern;

public class WebsiteTests 
{
	private Selenium selenium;

	@Before
	public void setUp() throws Exception 
	{
		
		String fireFoxBrowser = "*chrome";
		//String googleBrowser = "*googlechrome C:\\Program Files (x86)\\Google\\Chrome\\Application\\chrome.exe";
		
		selenium = new DefaultSelenium("localhost", 4444, fireFoxBrowser, "http://manheim-shoe-store-test.herokuapp.com/");
		selenium.start();
	}

	@Test
	public void testRemote() throws Exception 
	{
		selenium.open("/");
		selenium.click("link=Report An Issue");
		selenium.waitForPageToLoad("30000");
		selenium.type("id=issue_title", "flip");
		selenium.type("id=issue_description", "flipsample");
		selenium.click("id=issue_submit");
		selenium.waitForPageToLoad("30000");
		assertTrue(selenium.isElementPresent("css=div.flash.notice"));
	}

	@After
	public void tearDown() throws Exception 
	{
		selenium.stop();
	}
}